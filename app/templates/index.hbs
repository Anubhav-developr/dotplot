<div id="front">
  <header class="mdl-layout__header" id="top-bar">
    <div class="mdl-layout__header-row">
      <a href="/" id="dotplot-logo"><img src="/assets/img/dotplot-logo-light.png" alt="DotPlot logo" /></a>
      <a href="https://cyber.harvard.edu/" id="bkc-logo"><img src="/assets/img/bkc_logo_white.png" alt="Berkman Klein Center for Internet & Society logo" /></a>
    </div>
  </header>

  <div class="main">
    <div class="backgrounded" id="text-col">
      <div class="content">
        <h1>Visualize data in a playful and interactive way!</h1>
        <div class="buttons">
          {{#link-to 'about' classNames='mdl-button button-green'}}
            Learn more about Dotplot
          {{/link-to}}
          {{#link-to 'projects.new' classNames='mdl-button button-red'}}
            Create your visualization
          {{/link-to}}
          {{#link-to 'projects.edit' 'sample' classNames='mdl-button button-blue'}}
            Play with sample data
          {{/link-to}}
          {{#link-to 'gallery' classNames='mdl-button button-orange'}}
            See visualization examples
          {{/link-to}}
        </div>
      </div>
    </div>
    <div id="image-col">
      <div class="content">
        <video src="/assets/vids/scroll.mp4" autoplay="true" loop="true"></video>
      </div>
    </div>
  </div>
</div>
